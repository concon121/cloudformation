          - Name: "RELEASE_NAME"
            Value: "app-source.zip"
          - Name: "S3_BUCKET"
            Value: !Sub '<%= @appBucket %>'
          - Name: "STAGING_BUCKET"
            Value:
              Ref: <%= @stagingBucket %>
          - Name: "CLOUDFRONT_DIST_ID"
          <% if @cloudfrontLogicalId && !@cloudfrontLogicalId.nil? %>
            Value:
                Ref: <%= @cloudfrontLogicalId %>
          <% else %>
            Value: 'N/A'
          <% end %>
