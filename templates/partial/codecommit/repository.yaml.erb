  <%= @id %>:
    Type: 'AWS::CodeCommit::Repository'
    Properties:
      RepositoryDescription: <%= @description %>
      RepositoryName: <%= @name %>
      <% if @triggers && !@triggers.nil? %>
      Triggers: <% @triggers.each do |trigger| %>
        - Branches: <% trigger['branches'].each do |branch| %>
          - <%= branch %> <% end %>
          DestinationArn: <%= trigger['destinationArn'] %>
          Events: <% trigger['events'].each do |event| %>
            - <%= event %> <% end %>
          Name: <%= trigger['name'] %> <% end %>
      <% end %>
