  <%= @id %>Policy:
    Type: AWS::S3::BucketPolicy
    Properties:
      Bucket:
        Ref: <%= @id %>
      PolicyDocument:
        Statement:
          - Sid: 'AllowCloudFront'
            Effect: 'Allow'
            Principal:
              CanonicalUser: <%= @canonicalUser %>
            Action: 's3:GetObject'
            Resource: !Join ['', ['arn:aws:s3:::', <%= @bucketName %>, '/*']]
