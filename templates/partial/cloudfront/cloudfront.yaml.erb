  <%= @id %>Cloudfront:
    Type: AWS::CloudFront::Distribution
    Properties:
      DistributionConfig:
        Comment: Cloudfront Distribution pointing to S3 bucket
        <% if @webAcl && !@webAcl.nil? %>
        WebACLId:
          Ref: <%= @webAcl %>
        <% end %>
        Origins:
        - DomainName: !Join ['.', [<%= @bucketName %>, s3, amazonaws, com]]
          Id: S3Origin<% if @originAccessIdentity %>
          S3OriginConfig:
            OriginAccessIdentity: !Join ['/', ['origin-access-identity', 'cloudfront', <%= @originAccessIdentity %>]]
          <% else %>
          CustomOriginConfig:
            HTTPPort: '80'
            HTTPSPort: '443'
            OriginProtocolPolicy: http-only <% end %>
        Enabled: true
        HttpVersion: 'http2'
        DefaultRootObject: !Ref 'IndexDocument'
        Aliases:
        - !Join ['.', [!Ref 'ProjectName', !Ref 'RootDomain']]
        - !Join ['.', ['www', !Ref 'ProjectName', !Ref 'RootDomain']]
        DefaultCacheBehavior:
          AllowedMethods:
          - GET
          - HEAD
          Compress: true
          TargetOriginId: S3Origin
          ForwardedValues:
            QueryString: true
            Cookies:
              Forward: none
          ViewerProtocolPolicy: allow-all
        PriceClass: PriceClass_All

  <%= @id %>DNSAliases:
    Type: "AWS::Route53::RecordSetGroup"
    <% if @dependsOn && !@dependsOn.nil? %>
    DependsOn: <% @dependsOn.each do |dependency| %>
      - <%= dependency %> <% end %>
    <% end %>
    Properties:
      HostedZoneName: <%= @hostedZone %>
      Comment: Zone apex alias.
      RecordSets:
        - Name: !Sub
              - www.${Domain}
              - Domain: !Join ['.', [!Ref 'ProjectName', !Ref 'RootDomain']]
          Type: A
          AliasTarget:
            HostedZoneId: 'Z2FDTNDATAQYW2'
            DNSName: !GetAtt [<%= @id %>Cloudfront, DomainName]
        - Name: !Join ['.', [!Ref 'ProjectName', !Ref 'RootDomain']]
          Type: A
          AliasTarget:
            HostedZoneId: 'Z2FDTNDATAQYW2'
            DNSName: !GetAtt [<%= @id %>Cloudfront, DomainName]
