  <%= @id %>:
    Type: 'AWS::Lambda::Function'
    Properties:
      Code:
        S3Bucket: <%= @bucket %>
        S3Key: <%= @key %><% if @lambda_version && !@lambda_version.nil? %>
        S3ObjectVersion: <%= @lambda_version %><% end %>
      Description: <%= @description %>
      FunctionName: !Sub ${ProjectName}-<%= @name %>
      Handler: <%= @handler %>
      Role: <%= @role %>
      Runtime: <%= @runtime %>
      Timeout: 300
